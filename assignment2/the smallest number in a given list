def find_smallest_number(lst):
    if not lst:
        return None  # Handle empty list
    smallest = lst[0]
    for num in lst:
        if num < smallest:
            smallest = num
    return smallest

# Example usage
numbers = [12, 5, 8, 19, 3, 7]
smallest = find_smallest_number(numbers)

print("Original List:", numbers)
print("Smallest Number:", smallest)
